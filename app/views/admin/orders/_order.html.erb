<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customer email:</strong>
    <%= order.customer_email %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total / 100 %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </p>
  <% if order.order_products.any? %>
    <h3 class="my-5">Order Products</h3>
    <% order.order_products.each do |op| %>
      <p class="my-5">
        <strong class="block font-medium mb-1">Product:</strong>
        <%= op.product.name %>
      </p>
      <p class="my-5">
        <strong class="block font-medium mb-1">Quantity:</strong>
        <%= op.quantity %>
      </p>
      
      <p>
        <strong class="block font-medium mb-1">Price:</strong>
        <%= op.product.price %>
      </p>
    <% end %>
  <% end %>
  <% if action_name != "show" %>
    <%= link_to "Show this order", admin_order_path(order), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
