<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-red-600 text-white block font-medium" %>
  </div>
  <h1>Unfullfilled Orders</h1>
  <div class="flex flex-col w-full" >
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left " >
                Order Id
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left " >
                Customer Email
              </th>
              
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left" >
                Address
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left" >
                Total
                
              </th>
            </tr>
          </thead>
          <tbody>
            <% @not_fulfilled_orders.each do |o| %>
              <tr class="bg-neutral-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                  <%= link_to  o.id, [:admin, o], class: "underline" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800  ">
                  <%= o.customer_email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800  ">
                  <%= o.address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                   <%= number_to_currency(o.total.to_f / 100, unit: "DZ ", separator: ",", delimiter: ".") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="mt-4">
          <%== pagy_nav(@not_fulfilled_pagy) if @not_fulfilled_pagy.pages > 1 %>
        </div>
        
      </div>
    </div>
  </div>
